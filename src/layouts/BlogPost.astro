---
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{frontmatter.title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,500;0,600;1,400&family=Source+Sans+Pro:wght@400;600&display=swap" rel="stylesheet">
  </head>
  <body class="bg-gradient-to-br from-emerald-950 via-[#0B1F1A] to-[#0C1F15]">
    <nav class="bg-emerald-900/80 text-emerald-50 shadow-lg border-b border-emerald-800/20 backdrop-blur-sm">
      <div class="max-w-4xl mx-auto px-4 py-4">
        <a href="/" class="text-2xl font-serif italic">Life Adventures</a>
      </div>
    </nav>
    
    <main class="max-w-4xl mx-auto px-4 py-12">
      <article class="prose lg:prose-xl prose-invert prose-headings:font-serif prose-headings:text-emerald-50 prose-p:text-emerald-200/90 mx-auto">
        <h1 class="italic">{frontmatter.title}</h1>
        <p class="text-emerald-300/90 font-serif italic -mt-6">
          {new Date(frontmatter.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </p>
        {frontmatter.image && (
          <div class="relative">
            <img
              src={frontmatter.image}
              alt={frontmatter.title}
              class="rounded-lg shadow-xl w-full object-cover max-h-[400px]"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-[#0C1F15]/60 to-transparent rounded-lg"></div>
          </div>
        )}
        <div class="mt-8 prose-a:text-emerald-300 hover:prose-a:text-emerald-200 prose-strong:text-emerald-200 prose-code:text-emerald-200 prose-li:text-emerald-200/90">
          <slot />
        </div>
      </article>
    </main>

    <footer class="mt-20 bg-emerald-900/80 text-emerald-50 py-8 border-t border-emerald-800/20 backdrop-blur-sm">
      <div class="max-w-4xl mx-auto px-4 text-center font-serif italic">
        Making memories, one adventure at a time
      </div>
    </footer>
  </body>
</html>